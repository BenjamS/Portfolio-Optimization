df_Lrot <- as.data.frame(do.call(rbind, list_df))
colnames(df_Lrot)[2:4] <- gsub("\\.", " ", colnames(df_Lrot)[2:4])
group_names <- as.character(unique(df_Lrot$Group))
n_groups <- length(group_names)
